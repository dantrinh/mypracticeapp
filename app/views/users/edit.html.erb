<h1 align="center"> Edit your profile </h1>

<div class="row">
  <di class="col-md-12">
    <%= form_for(@user, :html => {class: "form-horizontal", role: "form"}) do |f| %>

      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :username %> <br>
        </div>
        <div class="col-sm-8">
          <%= f.text_field :username, class: "form-control", placeholder: "Enter Username", autofocus: true %>
        </div>
      </div>

      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :email %> <br>
        </div>
        <div class="col-sm-8">
          <%= f.email_field :email,class: "form-control", placeholder: "Enter Email", autofocus: true %>
        </div>
      </div>

      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :password %> <br>
        </div>
        <div class="col-sm-8">
          <%= f.password_field :password, class: "form-control", placeholder: "Enter Password", autofocus: true %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-8">
          <%= f.submit "Update your account", class: "btn btn-primary btn-lg"%>
        </div>
      </div>

    <% end %>

    <%= link_to 'Back to all articles', articles_path %>

  </di>
</div>